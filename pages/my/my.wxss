.my {
  position: relative;
}
.my .my-bg {
  width: 750rpx;
  height: 360rpx;
  border-radius: 0rpx;
  position: relative;
}
.my .my-bg .my-bg-img {
  width: 750rpx;
  height: 360rpx;
  border-radius: 0rpx;
}
.my .my-bg .my-bg-box {
  position: absolute;
  top: 76rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 690rpx;
  height: 112rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.my .my-bg .my-bg-box .bg__userImg {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
}
.my .my-bg .my-bg-box .bg-info {
  display: flex;
  align-items: center;
}
.my .my-bg .my-bg-box .bg-info .info-user {
  width: 536rpx;
  height: 112rpx;
  border-radius: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
}
.my .my-bg .my-bg-box .bg-info .info-user .info-user--name {
  color: #FFFFFF;
  font-size: 36rpx;
  font-weight: 400;
}
.my .my-bg .my-bg-box .bg-info .info-user .info-user__binding {
  display: flex;
  align-items: center;
}
.my .my-bg .my-bg-box .bg-info .info-user .info-user__binding .info-user__binding--tel {
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: 400;
}
.my .my-bg .my-bg-box .bg-info .info-user .info-user__binding .info-user__binding--btn {
  background-color: #fff;
  border-radius: 30rpx;
  height: 42rpx;
  width: 98rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: 0;
  font-size: 30rpx;
  font-weight: 98rpx;
  color: #FF6F1D;
  font-size: 24rpx;
  font-weight: 400;
  margin-left: 22rpx;
}
.my .my-bg .my-bg-box .bg-info .info-user .info-user__telnum {
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}
.my .my-bg .my-bg-box .bg-info .info-arrow {
  width: 16rpx;
  height: 28rpx;
  border-radius: 0rpx;
}
.my .my-nav {
  width: 674rpx;
  min-height: 188rpx;
  border-radius: 12rpx;
  background: #fff;
  position: absolute;
  top: 270rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  padding: 0 8rpx;
}
.my .my-nav .my-nav__li {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
  justify-content: center;
  align-items: center;
  width: 168rpx;
  height: 164rpx;
  border-radius: 0rpx;
}
.my .my-nav .my-nav__li .my-nav__li--img {
  width: 72rpx;
  height: 72rpx;
  border-radius: 0rpx;
}
.my .my-nav .my-nav__li .my-nav__li--title {
  color: #888888;
  font-size: 24rpx;
  font-weight: 400;
  margin-top: 16rpx;
}
