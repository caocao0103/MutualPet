.authorization {
  width: 100vw;
  height: 100vh;
  background-color: #fff;
  border-radius: 0rpx;
}
.authorization .authorization-main {
  margin: 0 auto;
  padding-top: 230rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.authorization .authorization-main .main--title {
  color: #444444;
  font-size: 32rpx;
  font-weight: 500;
}
.authorization .authorization-main .main--desc {
  margin-top: 4rpx;
  color: #888888;
  font-size: 28rpx;
  font-weight: 400;
}
.authorization .authorization-main .main--stateImg {
  width: 400rpx;
  height: 320rpx;
  border-radius: 0rpx;
  margin-top: 48rpx;
}
.authorization .authorization-main .main--ok {
  width: 400rpx;
  height: 80rpx;
  background-color: #FF6F1D;
  border-radius: 40rpx;
  margin-top: 66rpx;
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 400;
  border: none;
}
.authorization .authorization-main .main--cancel {
  width: 400rpx;
  height: 80rpx;
  background-color: #EBECED;
  border-radius: 40rpx;
  color: #888888;
  font-size: 28rpx;
  font-weight: 400;
  margin-top: 24rpx;
  border: none;
}
