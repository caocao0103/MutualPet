.releasePets-hint {
  background: #FFF0E8;
  display: flex;
  align-items: center;
  padding: 8rpx 30rpx;
}
.releasePets-hint .releasePets-hint--icon {
  width: 25rpx;
  height: 25rpx;
  border-radius: 0rpx;
}
.releasePets-hint .releasePets-hint--text {
  color: #EE854A;
  font-size: 24rpx;
  font-weight: 400;
}
.releasePets {
  padding: 30rpx 30rpx 0 30rpx;
  background: #F8F8F8;
}
.releasePets .releasePets-choose {
  padding: 40rpx 30rpx;
  background: #fff;
  box-shadow: 0px 4px 20px 0px rgba(221, 221, 221, 0.5);
  border-radius: 4rpx;
}
.releasePets .releasePets-choose .releasePets-choose__top {
  border-bottom: 2rpx solid #F3F3F3;
  padding-bottom: 26rpx;
  position: relative;
}
.releasePets .releasePets-choose .releasePets-choose__top .releasePets-choose__top--Tips {
  position: absolute;
  bottom: 28rpx;
  width: 360rpx;
  height: 58rpx;
  border-radius: 0rpx;
  background: rgba(255, 111, 29, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 400;
}
.releasePets .releasePets-choose .releasePets-choose__bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 26rpx;
}
.releasePets .releasePets-Hygiene {
  padding-top: 50rpx;
}
.releasePets .releasePets-Hygiene .Hygiene--title {
  color: #444444;
  font-size: 34rpx;
  font-weight: 500;
}
.releasePets .releasePets-Hygiene .Hygiene-from {
  margin-top: 30rpx;
  background: #fff;
  padding: 0 30rpx;
}
.releasePets .releasePets-Hygiene .Hygiene-from .from--name {
  width: 600rpx;
}
.releasePets .releasePets-Hygiene .Hygiene-from .from--weight {
  width: 600rpx;
}
.releasePets .releasePets-Hygiene .Hygiene-from .from-tel {
  padding-bottom: 30rpx;
}
.releasePets .releasePets-Hygiene .Hygiene-from .from-tel .from-tel--title {
  color: #444444;
  font-size: 28rpx;
  font-weight: 500;
  padding: 30rpx 0;
}
.releasePets .releasePets-Hygiene .Hygiene-from .from-tel .from-tel--input {
  height: 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.releasePets .releasePets-introduce {
  margin-top: 50rpx;
}
.releasePets .releasePets-introduce .releasePets-introduce--title {
  color: #444444;
  font-size: 34rpx;
  font-weight: 500;
}
.releasePets .releasePets-introduce .releasePets-introduce--textarea {
  margin-top: 30rpx;
}
.releasePets .releasePets-voice {
  margin-top: 30rpx;
}
.releasePets--sub {
  background: #FF6F1D;
  height: 88rpx;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 400;
}
