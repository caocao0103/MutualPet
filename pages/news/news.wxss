/* pages/news/news.wxss */
.pets_xiaoxi {
  padding: 0 30rpx;
  /* background: #4fd; */
}
.pets_xiaoxi .pets_information {
  width: 100%;
  height: 120rpx;
  /* background: #f8f8f8; */
  border-bottom: 1px solid #ccc;
  position: relative;
}
.pets_xiaoxi .pets_information_img {
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  border-radius: 50%;
}
.pets_xiaoxi .pets_information_name {
  font-size: 26rpx;
  color: #444;
  position: absolute;
  left: 110rpx;
  top: 20rpx;
}
.pets_xiaoxi .pets_information_names {
  font-size: 22rpx;
  color: #999;
  position: absolute;
  left: 110rpx;
  top: 58rpx;
}


.myAdopt-pet__empty {
  height: 700rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.myAdopt-pet__empty--img {
  width: 400rpx;
  height: 276rpx;
}
.myAdopt-pet__empty--desc {
  color: #AAAAAA;
  font-size: 26rpx;
  margin-top: 30rpx;
}

.pet_login{
  width: 630rpx;
  height:88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fff;
  background:linear-gradient(270deg,rgba(255,115,25,1) 0%,rgba(255,132,92,1) 100%);
  box-shadow:0px 4px 16px 0px rgba(255,193,158,1);
  border-radius: 88rpx;
  text-align: center;
  position: fixed;
  left: 50%;
  bottom: 50rpx;
  transform: translateX(-50%);

}