.login {
  width: 100vw;
  height: 100vh;
  background-color: #fff;
  border-radius: 0rpx;
  display: flex;
  justify-content: center;
}
.login .login-main .login-main--title {
  color: #333333;
  font-size: 54rpx;
  font-weight: 500;
  margin-top: 200rpx;
  margin: 200rpx 0 0 30rpx;
  position: relative;
}
.login .login-main .login-main--title::after {
  content: "";
  position: absolute;
  width: 110rpx;
  height: 18rpx;
  border-radius: 0rpx;
  background: rgba(255, 162, 109, 0.7);
  bottom: 0;
  left: 0;
}
.login .login-main .login__tel {
  height: 100rpx;
  margin-top: 78rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #EEEEEE;
}
.login .login-main .login__tel .login__tel--icon {
  width: 29rpx;
  height: 45rpx;
  border-radius: 0rpx;
}
.login .login-main .login__tel .login__tel--input {
  flex: 1;
  height: 60rpx;
}
.login .login-main .login__num {
  height: 100rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #EEEEEE;
}
.login .login-main .login__num .login__num--img {
  width: 29rpx;
  height: 45rpx;
  border-radius: 0rpx;
}
.login .login-main .login__num .login__num--input {
  width: 430rpx;
  height: 60rpx;
  border-radius: 0rpx;
}
.login .login-main .login__num .login__num--btn {
  width: 150rpx;
  color: #FF6F1D;
  font-size: 28rpx;
  font-weight: 400;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.login .login-main .login__num .login__num--second {
  color: #888;
}
.login .login-main .login--ok {
  margin-top: 84rpx;
  width: 630rpx;
  height: 88rpx;
  background-color: #FF7319;
  border-radius: 44rpx;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 400;
  border: none;
}
.login .login-main .login--hover {
  opacity: .7;
}
.login .login-main .login--cancel {
  margin-top: 40rpx;
  border: 2rpx solid #EEEEEE;
  color: #CCCCCC;
  font-size: 32rpx;
  font-weight: 400;
  width: 630rpx;
  height: 88rpx;
  border-radius: 44rpx;
}
