.moreChoose {
  display: flex;
  align-items: center;
}
.chooseImage {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 2rpx solid #DDDDDD;
  box-sizing: border-box;
  margin-left: 16rpx;
}
.chooseImage .chooseImage--icon {
  position: relative;
  width: 34rpx;
  height: 34rpx;
}
.chooseImage .chooseImage--icon:after {
  content: "";
  width: 4rpx;
  height: 34rpx;
  border-radius: 0rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: #CCCCCC;
}
.chooseImage .chooseImage--icon:before {
  content: "";
  width: 34rpx;
  height: 4rpx;
  border-radius: 0rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: #CCCCCC;
}
.chooseImage .chooseImage--text {
  color: #CCCCCC;
  font-size: 24rpx;
  font-weight: 400;
  margin-top: 8rpx;
}
.image {
  position: relative;
  margin-left: 16rpx;
}
.image:first-child{
  margin-left: 0rpx;
}
.close {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  top: 0;
  right: 0;
  transform: translate(30%, -30%);
}
