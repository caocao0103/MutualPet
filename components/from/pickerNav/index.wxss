/* components/from/picker/index.wxss */
.pickerNav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  /* border-bottom: 1rpx solid #EEEEEE; */
  position: relative;
}
.pickerNav::after{
  content: "";
  width: 630rpx;
  border: 1rpx solid #EEEEEE;
  position: absolute;
  bottom: 2rpx;
  right: 0;
}
.pickerNav--l {
  color: #444444;
  font-size:28rpx;
  font-weight:500;
  display: flex;
  align-items: center;
}
.input1--mandatory {
  color: red;
  width: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pickerNav__r {
  display: flex;
  align-items: center;
  /* justify-content: center; */
}
.pickerNav__r--hint {
  color: #CCCCCC;
  font-size:28rpx;
  font-weight:400;
  margin-right: 24rpx;
  /* height: 30rpx; */
}
.pickerNav__r--sel {
  color: #888888;
}
.pickerNav__r--arrow {
  color: #CCCCCC;
  font-size:28rpx;
  font-weight:400;
}
.input1-arrow {
  width: 12rpx;
  height: 22rpx;
}